// Chat-only components
.cmodal
  position fixed
  z-index 1035
  color #fff
  display none
  &.open
    display block
  a
  a:hover
  .close
    color #fff
  .cmodal-dialog
    width 100vw
    height 100vh
    background rgba(0,0,0,.8)
  .cmodal-content
    width 100%
    height 100%
    display flex
    flex-direction column
  .cmodal-header
  .cmodal-footer
    flex 0 0 auto
    padding 1rem
  .cmodal-header
    display flex
    align-items center
    justify-content flex-end
  .cmodal-body
    flex 1 1 auto
    img
    video
      max-width 80vw
      max-height 80vh
  .cmodal-footer
    display flex
    align-items center
    > div
      flex 1 1 auto
      > a
        margin 0 .4rem