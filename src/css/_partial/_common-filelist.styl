border = #dee2e6
gray = #cfd4da
dark = #353a40


include-common-filelist(device)
  .cmodal-list
    margin: 0
    padding: 0
    .cmodal-item
      text-align: center
      margin 10px 0
      list-style: none
      color #fff
    .cmodal-item-wrapper
      position relative
      width 100%
      display inline-flex
      justify-content center
      align-items center
      vertical-align top
      background dark
      &:before
        content: ""
        display: block
        padding-top: 100%
    .cmodal-item-figure
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      width: 100%
      height: 100%
      margin: auto
      object-fit: cover
      // cursor: pointer
    .cmodal-item-file
      position absolute
      width 100%
      height 100%
      display flex
      flex-direction column

      if device == pc
        border 1px solid #111
      else
        border 1px solid #fff

      .cmodal-item-file-icon
        flex 1 1 auto
        display flex
        justify-content center
        align-items center
        padding-top 0.25rem
      .cmodal-item-file-name
        flex 0 0 auto
        overflow hidden
        display -webkit-box
        text-overflow ellipsis
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        word-break break-all
        word-wrap break-word
        height 29px
        margin 0 0.25rem 0.25rem
        text-align left
        line-height 1.25
        font-size 0.756rem
    .cmodal-item-remove
      position: absolute
      top: 0
      right: 0
      width: 1.2rem
      font-size: .875rem
      display: flex
      background: rgba(0,0,0,.5)
      align-items: center
      justify-content: center
      color #fff
      &:before
        content: ""
        display: block
        padding-top: 100%
      @media screen and (min-width:480px)
        width: 2rem
        font-size: 1.25rem
  .cmodal-zoom
    .cmodal-item
      position: relative
    .cmodal-item-figure
      max-width: 100%
      max-height: 100vh
      height: auto
      min-height: 2rem
    .cmodal-item-remove
      position: absolute
      top: 0
      right: 0
      width: 2rem
      font-size: 1.25rem
      display: flex
      background: rgba(0,0,0,.5)
      align-items: center
      justify-content: center
      &:before
        content: ""
        display: block
        padding-top: 100%