      font-family: "Font Awesome\ 5 Pro";
      color: #fff;
      font-weight: 400;
      font-size: 1rem;
      line-height: 1;
      position: absolute;
      top: 50%;
      left: 50%;
      margin-top: -0.5rem;
      margin-left: -0.5rem;
      z-index: 1;
    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color rgba(0, 0, 0, .5)
