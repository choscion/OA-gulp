// Fix iOS sticky hover
.list-group-item-action:active,
.list-group-item-action.active
  background-color #edeff0

// Utils
.rotate-90
  transform rotate(90deg)
.rotate--90
  transform rotate(-90deg)
.rotate-180
  transform rotate(180deg)
.rotate-270
  transform rotate(270deg)
.object-fit-contain
  object-fit contain !important
.object-fit-cover
  object-fit cover !important
.text-break
  word-break: break-word !important;
  overflow-wrap: break-word !important;
.text-break-all
  word-break: break-all !important;
  overflow-wrap: anywhere !important;
.text-pre
  white-space pre
[aria-disabled="true"]
  pointer-events none
.border-muted
  border-color #edeff0


// Animation
.blink
  opacity 1
  animation-name blinkOpacity
  animation-iteration-count infinite
  animation-duration 2s
@keyframes blinkOpacity
  from
    opacity 1
  50%
    opacity .5
  to
    opacity 1

// Input Reset
.form-control
  textarea&::placeholder
    font-family inherit
  /.form-group-clear textarea&
    max-height 100px

// rich textarea
rich-textarea.form-control
  --rich-textarea-placeholder-color: #adb5bd

// Modal button close
.modal-header
  button.close
    position: relative;
    display: inline-block;
    speak: none;
    color: transparent;
    font-style: normal;
    font-weight: 400;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: laicon-solid !important;
    font-size: 1.25em;
    &:before
      content: '\E0EE';
      color: #000;
      position: absolute;
      right: 0;
      top: 0;
      padding: 1rem;

// Modal - safe area
.modal-dialog
  margin-top calc(0.5rem + env(safe-area-inset-top));
  margin-bottom calc(0.5rem + env(safe-area-inset-bottom));
  &.modal-dialog-centered
    min-height calc(100% - (0.5rem * 2 + env(safe-area-inset-top) + env(safe-area-inset-bottom)));
    &::before
      height calc(100vh - (0.5rem * 2 + env(safe-area-inset-top) + env(safe-area-inset-bottom)));
  &.modal-full
    padding-top calc(1rem + env(safe-area-inset-top));

// Cmodal - safe area
.cmodal
  .cmodal-dialog
    padding-top env(safe-area-inset-top);
    padding-bottom env(safe-area-inset-bottom);

// Toast - style about issue in toast location
.toast-container
  padding-top env(safe-area-inset-top)

// Disabled safe area
#page
  &.safearea-disabled
    .modal-dialog
      margin-top 0.5rem
      margin-bottom 0.5rem
      &.modal-dialog-centered
        min-height calc(100% - (0.5rem * 2))
        &::before
          height calc(100vh - (0.5rem * 2))
      &.modal-full
        padding-top 1rem
    .cmodal
      .cmodal-dialog
        padding-top 0
    // Style about issue in toast location
    & ~ .toast-container
      padding-top 0

@media (min-width: 570px)
  .modal-dialog
    margin-top calc(1.75rem + env(safe-area-inset-top));
    margin-bottom calc(1.75rem + env(safe-area-inset-bottom));
    &.modal-dialog-centered
      min-height calc(100% - (1.75rem * 2 + env(safe-area-inset-top) + env(safe-area-inset-bottom)));
      &::before
        height calc(100vh - (1.75rem * 2 + env(safe-area-inset-top) + env(safe-area-inset-bottom)));

  #page
    &.safearea-disabled
      .modal-dialog
        margin-top 1.75rem
        margin-bottom 1.75rem
        &.modal-dialog-centered
          min-height calc(100% - (1.75rem * 2))
          &::before
            height calc(100vh - (1.75rem * 2))

// Profile assignee
.profile-edit-assignee
  .list-group-item
    padding 0
  .custom-control
    padding-left 0
  ul.list-group
    .custom-control-label
      padding 0.75rem 1.25rem
      padding-left 2.6rem
      &:after, &:before
        top 50% !important
        left 1.25rem
        transform translateY(-50%)


// Chatsys date
.chatsys.chatsys-date
  position sticky
  top calc(var(--chatsys-date-top, 0px)+ 8px)
  z-index 2
  transition opacity 0.2s


// XLT linebreak
.preline
  white-space pre-line;

// Custom select disabled
.custom-select:disabled
  border-color #cfd4da
  background-color #f8f9fa
  color #adb5bd
  opacity 1

// sticker size in chat-item
.chat
  .chat-item-sticker
    max-width 185px
    max-height 160px
  

.chat,
.chat-reverse
  .border
    &-chat
      border-color rgba(173,181,189,0.5) !important

.text-black-30
  color rgba(0, 0, 0, .3) !important
  
.w-max-fit 
  max-width fit-content
  
// Rendering issue fix LINEBOT-41539
.translate-3d
  transform translate3d(0,0,0)
