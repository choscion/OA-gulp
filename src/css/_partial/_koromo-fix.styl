// Font-weight
.font-weight-bold
  font-weight 700 !important

// Auto tag
a.tag.autotag
  &:hover
    border-color: #505769
    color: #505769

// Name placeholder
.badge-placeholder
  display inline;
  margin 0 0.075em;
  padding 0.22em 0.6em

// Ellipsis with emoji fix
.text-truncate-box
  overflow hidden
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp 1
  white-space normal
  word-break break-all

// text underlined
.text-underline
  text-decoration underline

// Skeleton
.skeleton
  text-indent: -9999px;
  border-radius: 2px;
  border-color: #edeff0;
  background: #edeff0;
  background-image: linear-gradient(to right, #edeff0 0%, #dfe3e4 10%, #edeff0 20%);
  background-repeat: no-repeat;
  background-size: 200vw 100vh;
  -webkit-animation: shimmer 2s linear 2s infinite reverse forwards;
  animation: shimmer 2s linear 2s infinite reverse forwards;
.skeleton:after
  content: '...';
  color: #edeff0
@-webkit-keyframes shimmer {
  0% {background-position: -100% 0}
  100% {background-position: 40% 0}
}
@keyframes shimmer {
  0% {background-position: -100% 0}
  100% {background-position: 40% 0}
}

