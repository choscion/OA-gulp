// for Multi devicdes ['desktop', 'tablet', 'mobile']
border = #dee2e6
bg = #f8f9fa


#header
  // Reset CMS header
  box-sizing border-box
  padding 0
  flex 0 0 auto
  border 0
  // Transitional headers
  .header
    display flex
    min-width 0
    flex 1 1 auto
    padding 0 15px
    height 56px
    border-bottom 1px solid #dee2e6
    justify-content space-between
    align-items center
  .header-nav
    width auto
    flex-shrink 0
    min-width 15%
    &:last-of-type
      justify-content flex-end
    > *
      width auto!important
      padding 0.5rem 0
  .header-title
    flex 1 1 auto
    width auto
    min-width 0
  .header-menu
    .w-max-480
      max-width none

// Seacrh bar
.searchbar
  // Inside content panels
  width 100%
  height 48px
  background-color #f8f9fa
  .form-control
    height calc(1.71875rem + 2px)
    padding 0.25rem 0.5rem
    font-size 0.8125rem
  // Display as header
  &.header-on-mobile
    position relative
    height 56px
    background-color #fff
    z-index 4
    .form-control-sm
      height calc(2.15625rem + 2px)
      padding 0.375rem 0.75rem
      font-size 0.9375rem
      max-height 40px


// Content headers
.sub-header
  position relative
  z-index 4
  height 48px

// Layout
#content
  display flex
// Wrapper for transition
#content-wrapper
  display flex
  flex 1
  width 100%
#content-primary
#content-secondary
  overflow-y auto
  position relative
  display flex
  flex 1
  flex-direction column
#content-primary:first-child:last-child
  flex 1
  border 0



/* ------------------------------ */
/* ------------------------------ */

// Mobile
.mobile
  .hide-on-mobile
    display none !important

// Tablet
.tablet
  .hide-on-tablet
    display none !important
  #content-primary
    flex 0 0 320px
    border-right 1px solid border
  #content-secondary
    flex 1 1 auto
    min-width 320px
  .header-menu
    .w-max-480
      max-width 480px
  .searchbar
    height 48px
    background-color #f8f9fa
    .form-control
      height calc(1.71875rem + 2px)
      padding 0.25rem 0.5rem
      font-size 0.8125rem

  @media screen and (min-width: 1280px) and (orientation: landscape)
    #content-primary:first-child:last-child
      border 0 solid #f8f9fa
      border-width 0 20vw
    .modal-full
      border-width 0 20vw
      border-color transparent





